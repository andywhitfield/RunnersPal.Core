</aside>

<article>
    <h1>Route mapping</h1>
    <p>
        <form name="map" method="post">
        @Html.AntiForgeryToken()
        <input type="hidden" name="points" />
        <div>
        <input type="submit">Save</input>
        <button>Undo</button>
        <button>Clear</button>
        </div>
        <div>
        Name: <input type="text" name="routename" />
        Notes: <textarea name="notes"></textarea>
        </div>
        </form>
    </p>
    <div id="map"></div>
</article>

@section Head {
